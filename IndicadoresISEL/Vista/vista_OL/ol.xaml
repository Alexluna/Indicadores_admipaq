                <Label Content="CRU:" Grid.Column="1" Grid.Row="3" Name="label3"  />
                <TextBox Grid.Column="2" Grid.Row="3" Name="RfCRU" Text="Controles Remotos Universales"  />
                <Label Content="Manuel:" Grid.Column="1" Grid.Row="5" Name="label6" />
                <TextBox Grid.Column="2" Grid.Row="5" Name="RFCmanuel" Text="MANUEL HERNANDEZ GUZMAN" />
            </Grid>
        </GroupBox>
        <DatePicker Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="4"  Name="dateinicial"  />
        <DatePicker Grid.Column="5" Grid.ColumnSpan="2" Grid.Row="4"  Name="datefinal"  />
    </Grid>
</UserControl>
