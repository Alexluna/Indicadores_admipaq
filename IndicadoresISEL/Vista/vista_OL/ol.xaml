        <Label Content="Selecciona la ruta de la Empresa:" Grid.Column="2" Grid.Row="1" Name="label1" Grid.ColumnSpan="6" />
        <Button Content="Reporte" Grid.Column="10"  Grid.Row="8" Grid.ColumnSpan="2"  Name="button1" Click="button1_Click" />
        <GroupBox Grid.Column="2"  Grid.Row="6" Grid.ColumnSpan="7" Grid.RowSpan="4" Header="Filtros" Name="groupBox1" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0" />
                    <ColumnDefinition Width="68" />
                    <ColumnDefinition Width="217" />

                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="10" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="15*" />
                </Grid.RowDefinitions>
                <Label Content="Público G.:" Grid.Column="1" Grid.Row="1" Name="label2"  />
